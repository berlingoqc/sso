{
  "name": "@berlingoqc/sso",
  "version": "1.0.5",
  "description": "starter",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.d.ts",
  "typings": "dist/typing.d.ts",
  "engines": {
    "node": ">=8.9"
  },
  "bin": {
    "alb-sso-create-admin": "/dist/create-admin.js",
    "alb-sso-migrate": "/dist/migrate.js",
    "alb-sso": "/index.js"
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/berlingoqc/sso"
	},
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -f ./docker/sso.Dockerfile -t docker.pkg.github.com/berlingoqc/sso/sso:latest --build-arg GITHUB_ACCESS_TOKEN=$GITHUB_ACCESS_TOKEN .",
    "docker:run": "docker run -p 3001:3000 -d docker.pkg.github.com/berlingoqc/sso/sso:latest",
    "docker:push": "docker push docker.pkg.github.com/berlingoqc/sso/sso",
    "compose:host": "docker-compose -f ./docker/host.docker-compose.yml",
    "compose:test": "docker-compose -f ./docker/test.docker-compose.yml",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register ./index.js",
    "e2e:local": "npx newman run ./postman/sso.postman_collection.json -e ./postman/local.postman_environment.json",
    "e2e:docker": "npx newman run ./postman/sso.postman_collection.json -e ./postman/docker.postman_environment.json",
    "e2e:dev": "npx newman run ./postman/sso.postman_collection.json -e ./postman/dev.postman_environment.json"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@berlingoqc/lb-extensions": "^1.0.0",
    "@loopback/authentication": "^7.0.5",
    "@loopback/authorization": "^0.7.5",
    "@loopback/boot": "^3.1.2",
    "@loopback/context": "^3.13.2",
    "@loopback/core": "^2.13.1",
    "@loopback/openapi-v3": "^5.1.2",
    "@loopback/repository": "^3.3.0",
    "@loopback/rest": "^9.1.1",
    "@loopback/rest-explorer": "^3.0.5",
    "@loopback/security": "^0.3.6",
    "@loopback/service-proxy": "^3.0.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/dot": "^1.1.4",
    "@types/nodemailer": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "casbin": "^3.1.0",
    "dot": "^1.1.3",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "loopback-connector": "^4.11.0",
    "loopback-connector-postgresql": "^3.9.1",
    "mail": "^0.2.3",
    "node-otp": "^1.2.2",
    "nodemailer": "^6.4.6",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "puretext": "^0.1.5",
    "twilio": "^3.44.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@loopback/build": "^6.2.8",
    "@loopback/eslint-config": "^10.0.4",
    "@loopback/testlab": "^3.2.10",
    "@types/lodash": "^4.14.153",
    "@types/node": "^10.17.48",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-eslint-plugin": "^2.3.0",
    "eslint-plugin-mocha": "^8.0.0",
    "newman": "^5.1.0",
    "source-map-support": "^0.5.19",
    "typescript": "~4.1.2"
  }
}
